<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itHeight">

    <TextView
        android:id="@+id/listBrand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightOfListIt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listMod"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightOfListIt"
        android:layout_marginVertical="@dimen/margOfListMod"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listYear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightOfListIt"
        android:layout_marginVertical="@dimen/margOfListYear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listDescr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightOfListIt"
        android:layout_marginVertical="@dimen/margOfListDescr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listCost"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightOfListIt"
        android:layout_marginVertical="@dimen/margOfListCost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/listIm"
        android:layout_width="@dimen/widthOfImView"
        android:layout_height="@dimen/heightOfImView"
        android:layout_marginVertical="@dimen/margOfImView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>