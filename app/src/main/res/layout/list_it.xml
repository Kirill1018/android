<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/listBrand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layHeightOfListIt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listMod"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layHeightOfListIt"
        android:layout_marginVertical="@dimen/margVertOfLayOfListMod"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listYear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layHeightOfListIt"
        android:layout_marginVertical="@dimen/margVertOfLayOfListYear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listDescr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layHeightOfListIt"
        android:layout_marginVertical="@dimen/margVertOfLayOfListDescr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listCost"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layHeightOfListIt"
        android:layout_marginVertical="@dimen/margVertOfLayOfListCost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/listIm"
        android:layout_width="@dimen/layWidthOfImViewInListIt"
        android:layout_height="@dimen/layHeightOfImViewInListIt"
        android:layout_marginVertical="@dimen/margVertOfLayOfImViewInListIt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>